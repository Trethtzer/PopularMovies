<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="app.com.trethtzer.popularmovies.fragment.DetailActivityFragment"
        tools:showIn="@layout/activity_detail">

        <TextView
            android:text="TextViewTextViewTextViewTextViewTextViewTextView"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30dp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="220dp"
            app:srcCompat="@drawable/imagen"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/imageView_poster_detail" />

        <TextView
            android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextView"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/releaseDate"
            android:layout_marginTop="100dp"
            android:layout_alignLeft="@+id/title"
            android:gravity="center"/>

        <TextView
            android:text="TextViewTextViewTextViewTextViewTextViewTextView"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/rate"
            android:layout_alignLeft="@+id/title"
            android:layout_marginTop="170dp"
            android:gravity="center" />

        <TextView
            android:text="TextViewTextViewTextViewTextViewTextViewTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/synopsis"
            android:layout_below="@+id/rate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lista_trailers"
            android:layout_below="@id/synopsis"
            android:layout_marginTop="15dp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lista_reviews"
            android:layout_below="@id/lista_trailers"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>

</ScrollView>
